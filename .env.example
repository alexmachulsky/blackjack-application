# ============================================================
# ENVIRONMENT TEMPLATE — copy to .env and fill in real values
#   cp .env.example .env
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# ============================================================

# ── PostgreSQL ───────────────────────────────────────────────
POSTGRES_USER=blackjack
POSTGRES_PASSWORD=blackjack
POSTGRES_DB=blackjack

# ── Backend (FastAPI) ────────────────────────────────────────
# DATABASE_URL is constructed automatically by docker-compose from the
# vars above. Only set manually when running outside Docker:
# DATABASE_URL=postgresql://blackjack:blackjack@localhost:5432/blackjack

# Must be at least 32 characters — generate with the command above
SECRET_KEY=change-me-to-a-random-64-char-hex-string-before-running

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
INITIAL_BALANCE=1000.0

# ── Observability ────────────────────────────────────────────
LOG_LEVEL=INFO
ENVIRONMENT=development

# ── CORS (comma-separated origins) ──────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

