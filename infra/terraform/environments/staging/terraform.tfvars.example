# Copy to terraform.tfvars and fill in real values.
# Never commit terraform.tfvars — it is .gitignored.

aws_region  = "us-east-1"
app_name    = "blackjack"
environment = "staging"

availability_zones = ["us-east-1a", "us-east-1b"]

# EKS
kubernetes_version = "1.31"
node_instance_type = "t3.small"    # ~$15/month — cheapest for 3 pods

# Database (runs as K8s StatefulSet, not RDS)
db_name     = "blackjack"
db_username = "blackjack"

# Secrets — ALWAYS pass via environment variables, never in this file:
#   export TF_VAR_db_password="$(openssl rand -base64 24)"
#   export TF_VAR_app_secret_key="$(openssl rand -hex 32)"
# db_password    = "change-me"
# app_secret_key = "change-me"
