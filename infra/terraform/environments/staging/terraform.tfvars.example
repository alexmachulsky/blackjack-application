# Copy to terraform.tfvars and fill in real values.
# Never commit terraform.tfvars — it is .gitignored.

aws_region = "us-east-1"
app_name   = "blackjack"
environment = "staging"

availability_zones = ["us-east-1a", "us-east-1b"]

# EC2
key_name      = "my-keypair"      # Name of an existing EC2 key pair
instance_type = "t3.small"
admin_cidr    = "203.0.113.5/32"  # Your IP — narrow this down!

# RDS
db_instance_class = "db.t3.micro"
db_name           = "blackjack"
db_username       = "blackjack"

# Docker images
ghcr_owner = "alexmachulsky"
image_tag  = "latest"

# Secrets — prefer passing these as env vars instead of this file:
#   export TF_VAR_db_password="$(openssl rand -base64 24)"
#   export TF_VAR_app_secret_key="$(openssl rand -hex 32)"
# db_password    = "change-me"
# app_secret_key = "change-me"
